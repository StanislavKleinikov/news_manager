<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
    
    <context:component-scan base-package="com.google.kleinikov.stanislav" />
    
    <context:property-placeholder location="classpath:database.properties"/>
    
	<bean id="mysqlPool" class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
		<property name="url" value="${DB_URL}"></property>
		<property name="user" value="${DB_USER}"></property>
		<property name="password" value="${DB_PASSWORD}"></property>
		
	</bean>
</beans>